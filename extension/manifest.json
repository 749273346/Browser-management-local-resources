{
  "manifest_version": 3,
  "name": "Local Resource Manager",
  "version": "1.0.3",
  "description": "Browser extension to manage local resources via local server",
  "permissions": ["tabs"],
  "host_permissions": [
    "http://localhost:3001/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Local Resources",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
